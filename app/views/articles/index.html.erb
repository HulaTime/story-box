<% @articles.each do |article| %>
	<% article_lines = article.body.split("\n")[0..2].join("\n") %>
	<p> <%=link_to article.title, article_path(article) %> </p>
	<p> <%= article_lines %> </p>
	<p>
		<span>Reviews</span>
			<form>
				<textarea name='review-box'></textarea>
				<select name="review-rating">
					<% x=1 %>
					<% 10.times do %>
						<option value=<%= x %>><%= x %></option>
						<% x+=1 %>
					<% end %>
				</select>
				<input type="submit" value="Submit">
			</form>
	</p>
<% end %>

<% if user_signed_in? %>
	<%= link_to 'New Article', new_article_path %>
<% end %>